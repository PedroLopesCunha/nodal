<%= render "customers/shared/auth_logo" %>

<h1 class="auth-title"><%= t('auth.forgot_password.title') %></h1>
<p class="auth-subtitle"><%= t('auth.forgot_password.subtitle') %></p>

<%= simple_form_for(resource, as: resource_name, url: customer_password_path(org_slug: @organisation.slug), html: { method: :post, class: "auth-form" }) do |f| %>
  <%= f.error_notification %>

  <div class="auth-field">
    <%= f.input :email,
                required: true,
                autofocus: true,
                placeholder: t('auth.forgot_password.email_placeholder'),
                label: t('auth.forgot_password.email'),
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="auth-actions">
    <%= f.button :submit, t('auth.forgot_password.submit'), class: "auth-submit-btn" %>
  </div>
<% end %>

<div class="auth-divider">
  <span><%= t('auth.forgot_password.or') %></span>
</div>

<div class="auth-footer">
  <p><%= t('auth.forgot_password.remember_password') %> <%= link_to t('auth.forgot_password.sign_in'), new_customer_session_path(org_slug: @organisation.slug), class: "auth-link" %></p>
</div>

<div class="auth-powered-by">
  <a href="https://www.nodal-seiri.dev" target="_blank" rel="noopener">
    <%= t('auth.sign_in.powered_by') %> <span class="auth-powered-logo"><span class="auth-powered-icon">N</span>odal</span>
  </a>
</div>
