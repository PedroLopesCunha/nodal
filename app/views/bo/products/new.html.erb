<% content_for :bo_main_content do%>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_products_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
        <i class="fa-solid fa-box-open fa-lg"></i>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.products.new.title') %></h4>
        <span class="text-muted"><%= t('bo.products.new.subtitle') %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_products_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="product-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.products.new.create_product') %>
      </button>
    </div>
  </div>
</div>

<%= form_with model: @product, url: bo_products_path(params[:org_slug]), method: :post, id: "product-form", multipart: true do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.basic_information') %></h5>

          <div class="row g-3">
            <div class="col-md-8">
              <label class="form-label"><%= t('bo.products.form.product_name') %> <span class="text-danger">*</span></label>
              <%= f.text_field :name, class: "form-control", placeholder: t('bo.products.form.placeholders.product_name'), required: true %>
            </div>
            <div class="col-md-4">
              <label class="form-label"><%= t('bo.products.form.sku') %></label>
              <%= f.text_field :sku, class: "form-control", placeholder: t('bo.products.form.placeholders.sku') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-12">
              <label class="form-label"><%= t('bo.products.form.description') %> <span class="text-danger">*</span></label>
              <%= f.text_area :description, class: "form-control", placeholder: t('bo.products.form.placeholders.description'), rows: 3, required: true %>
              <small class="text-muted"><%= t('bo.products.form.description_hint') %></small>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.categories') %> <span class="text-danger">*</span></label>
              <div data-controller="checkbox-select">
                <input type="text"
                       class="form-control form-control-sm mb-2"
                       placeholder="<%= t('bo.products.form.search_categories') %>"
                       data-checkbox-select-target="search"
                       data-action="input->checkbox-select#filter">
                <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                  <% current_organisation.categories.kept.order(:ancestry, :position).each do |category| %>
                    <div class="form-check" data-checkbox-select-target="item" data-label="<%= category.full_path %>">
                      <input type="checkbox"
                             name="product[category_ids][]"
                             value="<%= category.id %>"
                             class="form-check-input"
                             id="category_<%= category.id %>"
                             <%= 'checked' if @product.category_ids.include?(category.id) %>>
                      <label class="form-check-label" for="category_<%= category.id %>">
                        <%= category.full_path %>
                      </label>
                    </div>
                  <% end %>
                </div>
              </div>
              <small class="text-muted"><%= t('bo.products.form.categories_hint') %></small>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.slug') %></label>
              <%= f.text_field :slug, class: "form-control", placeholder: t('bo.products.form.placeholders.slug') %>
              <small class="text-muted"><%= t('bo.products.form.slug_hint_auto') %></small>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.pricing_units') %></h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_price', currency: @current_organisation.currency_symbol) %> <span class="text-danger">*</span></label>
              <%= f.text_field :price, class: "form-control", placeholder: "24.99", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_description') %></label>
              <%= f.text_field :unit_description, class: "form-control", placeholder: t('bo.products.form.placeholders.unit_description') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity') %></label>
              <%= f.number_field :min_quantity, class: "form-control", placeholder: "1", min: 1, value: 1 %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity_type') %></label>
              <%= f.text_field :min_quantity_type, class: "form-control", placeholder: t('bo.products.form.placeholders.min_quantity_type') %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.product_images') %></h5>

          <div>
            <label class="form-label"><%= t('bo.products.form.upload_images') %></label>
            <%= f.file_field :photos, class: "form-control", accept: "image/*", multiple: true %>
            <small class="text-muted"><%= t('bo.products.form.images_hint') %></small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.availability') %></h5>

          <div class="form-check form-switch">
            <%= f.check_box :available, class: "form-check-input", role: "switch", id: "availableSwitch", checked: true %>
            <label class="form-check-label" for="availableSwitch"><%= t('bo.products.form.available_for_sale') %></label>
          </div>
          <small class="text-muted"><%= t('bo.products.form.unavailable_hint') %></small>

          <div class="form-check form-switch mt-3">
            <%= f.check_box :price_on_request, class: "form-check-input", role: "switch", id: "priceOnRequestSwitch" %>
            <label class="form-check-label" for="priceOnRequestSwitch"><%= t('bo.products.form.price_on_request') %></label>
          </div>
          <small class="text-muted"><%= t('bo.products.form.price_on_request_hint') %></small>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
