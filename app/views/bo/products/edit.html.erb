<% content_for :bo_main_content do%>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_product_path(params[:org_slug], @product), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded bg-primary d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
        <% if @product.photo.attached? %>
          <%= image_tag @product.photo, style: "width: 60px; height: 60px; object-fit: cover; border-radius: 4px;" %>
        <% else %>
          <i class="fa-solid fa-box fa-lg"></i>
        <% end %>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.products.edit.title') %></h4>
        <span class="text-muted"><%= @product.name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_product_path(params[:org_slug], @product), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="product-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.common.actions.save_changes') %>
      </button>
    </div>
  </div>
</div>

<%= form_with model: @product, url: bo_product_path(params[:org_slug], @product), method: :patch, id: "product-form", multipart: true do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.basic_information') %></h5>

          <div class="row g-3">
            <div class="col-md-8">
              <label class="form-label"><%= t('bo.products.form.product_name') %> <span class="text-danger">*</span></label>
              <%= f.text_field :name, class: "form-control", placeholder: t('bo.products.form.placeholders.product_name'), required: true %>
            </div>
            <div class="col-md-4">
              <label class="form-label"><%= t('bo.products.form.sku') %></label>
              <%= f.text_field :sku, class: "form-control", placeholder: t('bo.products.form.placeholders.sku') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-12">
              <label class="form-label"><%= t('bo.products.form.description') %> <span class="text-danger">*</span></label>
              <%= f.text_area :description, class: "form-control", placeholder: t('bo.products.form.placeholders.description'), rows: 3, required: true %>
              <small class="text-muted"><%= t('bo.products.form.description_hint') %></small>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.category') %> <span class="text-danger">*</span></label>
              <%= f.collection_select :category_id, Category.where(organisation: @product.organisation), :id, :name, { prompt: t('bo.products.form.select_category') }, { class: "form-select", required: true } %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.slug') %></label>
              <%= f.text_field :slug, class: "form-control", placeholder: t('bo.products.form.placeholders.slug') %>
              <small class="text-muted"><%= t('bo.products.form.slug_hint') %></small>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.pricing_units') %></h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_price', currency: @current_organisation.currency_symbol) %> <span class="text-danger">*</span></label>
              <%= f.text_field :price, class: "form-control", placeholder: "24.99", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_description') %></label>
              <%= f.text_field :unit_description, class: "form-control", placeholder: t('bo.products.form.placeholders.unit_description') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity') %></label>
              <%= f.number_field :min_quantity, class: "form-control", placeholder: "1", min: 1 %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity_type') %></label>
              <%= f.text_field :min_quantity_type, class: "form-control", placeholder: t('bo.products.form.placeholders.min_quantity_type') %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.product_image') %></h5>

          <% if @product.photo.attached? %>
            <div class="mb-3">
              <label class="form-label"><%= t('bo.products.form.current_image') %></label>
              <div class="border rounded p-2 d-inline-block">
                <%= image_tag @product.photo, style: "max-width: 200px; max-height: 200px; object-fit: cover;" %>
              </div>
            </div>
          <% end %>

          <div>
            <label class="form-label"><%= t('bo.products.form.upload_new_image') %></label>
            <%= f.file_field :photo, class: "form-control", accept: "image/*" %>
            <small class="text-muted"><%= t('bo.products.form.image_hint') %></small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.availability') %></h5>

          <div class="form-check form-switch">
            <%= f.check_box :available, class: "form-check-input", role: "switch", id: "availableSwitch" %>
            <label class="form-check-label" for="availableSwitch"><%= t('bo.products.form.available_for_sale') %></label>
          </div>
          <small class="text-muted"><%= t('bo.products.form.unavailable_hint') %></small>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.product_info') %></h5>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block"><%= t('bo.products.form.sku') %></small>
            <span><%= @product.sku || "-" %></span>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block"><%= t('bo.common.created') %></small>
            <span><%= @product.created_at.strftime("%-m/%-d/%Y") %></span>
          </div>

          <div>
            <small class="text-muted d-block"><%= t('bo.common.last_updated') %></small>
            <span><%= @product.updated_at.strftime("%-m/%-d/%Y") %></span>
          </div>
        </div>
      </div>

      <div class="card border-danger">
        <div class="card-body">
          <h5 class="card-title text-danger mb-3"><%= t('bo.common.danger_zone') %></h5>
          <p class="text-muted small mb-3"><%= t('bo.products.edit.delete_warning') %></p>
          <%= link_to bo_product_path(params[:org_slug], @product),
              class: "btn btn-outline-danger w-100",
              data: { turbo_method: :delete, turbo_confirm: t('bo.common.confirm.delete_product_name', name: @product.name) } do %>
            <i class="fa-solid fa-trash me-1"></i> <%= t('bo.products.edit.delete_product') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
