<% content_for :bo_main_content do%>

<div class="bo-page-header">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_product_path(params[:org_slug], @product, filter_params_hash), class: "text-muted text-decoration-none" do %>
        <i class="fa-solid fa-arrow-left fa-lg"></i>
      <% end %>

      <div class="rounded bg-primary d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
        <% if @product.photo_attached? %>
          <%= image_tag @product.photo, style: "width: 60px; height: 60px; object-fit: cover; border-radius: 4px;" %>
        <% else %>
          <i class="fa-solid fa-box fa-lg"></i>
        <% end %>
      </div>

      <div>
        <h1><%= t('bo.products.edit.title') %></h1>
        <p><%= @product.name %></p>
      </div>
    </div>

    <div class="bo-page-actions">
      <%= link_to bo_product_path(params[:org_slug], @product, filter_params_hash), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="product-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.common.actions.save_changes') %>
      </button>
    </div>
  </div>
</div>

<div class="bo-page-body">
<%= form_with model: @product, url: bo_product_path(params[:org_slug], @product), method: :patch, id: "product-form", multipart: true do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.basic_information') %></h5>

          <div class="row g-3">
            <div class="col-md-8">
              <label class="form-label"><%= t('bo.products.form.product_name') %> <span class="text-danger">*</span></label>
              <%= f.text_field :name, class: "form-control", placeholder: t('bo.products.form.placeholders.product_name'), required: true %>
            </div>
            <div class="col-md-4">
              <label class="form-label"><%= t('bo.products.form.sku') %></label>
              <%= f.text_field :sku, class: "form-control", placeholder: t('bo.products.form.placeholders.sku') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-12">
              <label class="form-label"><%= t('bo.products.form.description') %> <span class="text-danger">*</span></label>
              <%= f.text_area :description, class: "form-control", placeholder: t('bo.products.form.placeholders.description'), rows: 3, required: true %>
              <small class="text-muted"><%= t('bo.products.form.description_hint') %></small>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.categories') %> <span class="text-danger">*</span></label>
              <div data-controller="checkbox-select">
                <input type="text"
                       class="form-control form-control-sm mb-2"
                       placeholder="<%= t('bo.products.form.search_categories') %>"
                       data-checkbox-select-target="search"
                       data-action="input->checkbox-select#filter">
                <div class="border rounded p-2" style="max-height: 200px; overflow-y: auto;">
                  <% current_organisation.categories.kept.order(:ancestry, :position).each do |category| %>
                    <div class="form-check" data-checkbox-select-target="item" data-label="<%= category.full_path %>">
                      <input type="checkbox"
                             name="product[category_ids][]"
                             value="<%= category.id %>"
                             class="form-check-input"
                             id="category_<%= category.id %>"
                             <%= 'checked' if @product.category_ids.include?(category.id) %>>
                      <label class="form-check-label" for="category_<%= category.id %>">
                        <%= category.full_path %>
                      </label>
                    </div>
                  <% end %>
                </div>
              </div>
              <small class="text-muted"><%= t('bo.products.form.categories_hint') %></small>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.slug') %></label>
              <%= f.text_field :slug, class: "form-control", placeholder: t('bo.products.form.placeholders.slug') %>
              <small class="text-muted"><%= t('bo.products.form.slug_hint') %></small>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.pricing_units') %></h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_price', currency: @current_organisation.currency_symbol) %> <span class="text-danger">*</span></label>
              <%= f.text_field :price, class: "form-control", placeholder: "24.99", required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.unit_description') %></label>
              <%= f.text_field :unit_description, class: "form-control", placeholder: t('bo.products.form.placeholders.unit_description') %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity') %></label>
              <%= f.number_field :min_quantity, class: "form-control", placeholder: "1", min: 1 %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.products.form.min_quantity_type') %></label>
              <%= f.text_field :min_quantity_type, class: "form-control", placeholder: t('bo.products.form.placeholders.min_quantity_type') %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.product_images') %></h5>

          <% if @product.photos.attached? && @product.photos.any? %>
            <div class="mb-3">
              <label class="form-label"><%= t('bo.products.form.current_images') %></label>
              <div class="d-flex flex-wrap gap-2" data-controller="lightbox">
                <% main_blob_id = @product.cover_photo_blob_id || @product.photos.first&.blob_id %>
                <% @product.photos.each do |photo| %>
                  <div class="position-relative border rounded p-1" style="width: 120px;">
                    <a href="#" data-action="lightbox#open" data-lightbox-url="<%= url_for(photo) %>" style="cursor: zoom-in;">
                      <%= image_tag photo, style: "width: 100%; height: 100px; object-fit: cover; border-radius: 4px;" %>
                    </a>
                    <% if photo.blob_id == main_blob_id %>
                      <span class="position-absolute badge bg-primary" style="bottom: 4px; left: 50%; transform: translateX(-50%); font-size: 10px;">
                        <%= t('bo.products.form.main') %>
                      </span>
                    <% else %>
                      <%= link_to set_main_photo_bo_product_path(params[:org_slug], @product, photo_id: photo.blob_id),
                          data: { turbo_method: :patch },
                          class: "position-absolute btn btn-primary btn-sm",
                          style: "bottom: 4px; left: 50%; transform: translateX(-50%); font-size: 9px; padding: 1px 6px;",
                          title: t('bo.products.form.set_as_main') do %>
                        <i class="fa-solid fa-star" style="font-size: 9px;"></i>
                      <% end %>
                    <% end %>
                    <%= link_to delete_photo_bo_product_path(params[:org_slug], @product, photo_id: photo.id),
                        data: { turbo_method: :delete, turbo_confirm: t('bo.common.confirm.delete_image') },
                        class: "position-absolute top-0 end-0 btn btn-danger btn-sm rounded-circle",
                        style: "width: 24px; height: 24px; padding: 0; line-height: 24px; transform: translate(50%, -50%);" do %>
                      <i class="fa-solid fa-times" style="font-size: 10px;"></i>
                    <% end %>
                  </div>
                <% end %>
                <%= render "shared/lightbox" %>
              </div>
            </div>
          <% end %>

          <div>
            <label class="form-label"><%= t('bo.products.form.add_images') %></label>
            <%= f.file_field :photos, class: "form-control", accept: "image/*", multiple: true %>
            <small class="text-muted"><%= t('bo.products.form.images_hint') %></small>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.availability') %></h5>

          <div class="form-check form-switch">
            <%= f.check_box :available, class: "form-check-input", role: "switch", id: "availableSwitch" %>
            <label class="form-check-label" for="availableSwitch"><%= t('bo.products.form.available_for_sale') %></label>
          </div>
          <small class="text-muted"><%= t('bo.products.form.unavailable_hint') %></small>

          <div class="form-check form-switch mt-3">
            <%= f.check_box :price_on_request, class: "form-check-input", role: "switch", id: "priceOnRequestSwitch" %>
            <label class="form-check-label" for="priceOnRequestSwitch"><%= t('bo.products.form.price_on_request') %></label>
          </div>
          <small class="text-muted"><%= t('bo.products.form.price_on_request_hint') %></small>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.products.form.product_info') %></h5>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block"><%= t('bo.products.form.sku') %></small>
            <span><%= @product.sku || "-" %></span>
          </div>

          <div class="border-bottom pb-3 mb-3">
            <small class="text-muted d-block"><%= t('bo.common.created') %></small>
            <span><%= @product.created_at.strftime("%-m/%-d/%Y") %></span>
          </div>

          <div>
            <small class="text-muted d-block"><%= t('bo.common.last_updated') %></small>
            <span><%= @product.updated_at.strftime("%-m/%-d/%Y") %></span>
          </div>
        </div>
      </div>

      <div class="card border-danger">
        <div class="card-body">
          <h5 class="card-title text-danger mb-3"><%= t('bo.common.danger_zone') %></h5>
          <p class="text-muted small mb-3"><%= t('bo.products.edit.delete_warning') %></p>
          <%= link_to bo_product_path(params[:org_slug], @product),
              class: "btn btn-outline-danger w-100",
              data: { turbo_method: :delete, turbo_confirm: t('bo.common.confirm.delete_product_name', name: @product.name) } do %>
            <i class="fa-solid fa-trash me-1"></i> <%= t('bo.products.edit.delete_product') %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
</div>

<% end %>
