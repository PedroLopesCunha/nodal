<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to import_bo_products_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
        <i class="fa-solid fa-table-columns fa-lg"></i>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.products.import.mapping_title') %></h4>
        <span class="text-muted"><%= t('bo.products.import.mapping_subtitle') %></span>
      </div>
    </div>
  </div>
</div>

<%= form_with url: import_process_bo_products_path(params[:org_slug]), method: :post, id: "mapping-form", data: { turbo: false } do %>
  <%= hidden_field_tag :import_key, @import_key %>

  <div class="card">
    <div class="card-body">
      <h5 class="card-title mb-4"><%= t('bo.products.import.map_columns') %></h5>
      <p class="text-muted mb-4"><%= t('bo.products.import.map_columns_desc') %></p>

      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th style="width: 30%"><%= t('bo.products.import.csv_column') %></th>
              <th style="width: 35%"><%= t('bo.products.import.product_field') %></th>
              <th style="width: 35%"><%= t('bo.products.import.preview_value') %></th>
            </tr>
          </thead>
          <tbody>
            <% @csv_headers.each do |header| %>
              <tr>
                <td>
                  <strong><%= header %></strong>
                </td>
                <td>
                  <%= select_tag "mapping[#{header}]",
                      options_for_select(
                        [[t('bo.products.import.skip_column'), ""]] +
                        @importable_fields.map { |f| [f.humanize, f] }
                      ),
                      class: "form-select" %>
                </td>
                <td class="text-muted">
                  <% preview_value = @preview_row[header].to_s %>
                  <% if preview_value.length > 50 %>
                    <%= preview_value.truncate(50) %>
                  <% else %>
                    <%= preview_value.presence || "-" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="card mt-3">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <i class="fa-solid fa-info-circle text-info me-2"></i>
          <span class="text-muted"><%= t('bo.products.import.mapping_hint') %></span>
        </div>
        <div class="d-flex gap-2">
          <%= link_to import_bo_products_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
            <i class="fa-solid fa-arrow-left"></i> <%= t('bo.common.actions.back') %>
          <% end %>
          <button type="submit" class="btn btn-primary">
            <i class="fa-solid fa-file-import"></i> <%= t('bo.products.import.start_import') %>
          </button>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
