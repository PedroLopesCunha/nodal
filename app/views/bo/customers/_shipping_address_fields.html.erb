<div class="border rounded p-3 mb-3">
  <%= f.hidden_field :address_type, value: "shipping" %>
  <%= f.hidden_field :active, value: true %>

  <div class="row g-3">
    <div class="col-md-8">
      <label class="form-label"><%= t('bo.customers.form.address.street') %></label>
      <%= f.text_field :street_name, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('bo.customers.form.address.number') %></label>
      <%= f.text_field :street_nr, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('bo.customers.form.address.postal_code') %></label>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('bo.customers.form.address.city') %></label>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('bo.customers.form.address.country') %></label>
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>

  <div class="form-check mt-2">
    <%= f.check_box :active, {}, false, true %>
    <label class="form-check-label text-danger">
      <%= t('bo.customers.form.archive_address') %>
    </label>
  </div>

  <% if f.object.archived? %>
    <span class="badge bg-secondary"><%= t('bo.common.statuses.archived') %></span>
  <% end %>
</div>
