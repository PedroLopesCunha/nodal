<% content_for :bo_main_content do %>

<div class="container-fluid py-4">
<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customers_path(params[:org_slug], filter_params_hash), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <%= @customer.contact_name&.split&.map(&:first)&.join&.upcase || "?" %>
      </div>

      <div>
        <h4 class="mb-0"><%= @customer.contact_name %></h4>
        <span class="text-muted"><%= @customer.company_name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <% if @customer.active? %>
        <span class="badge bg-primary rounded-pill px-3 py-2"><%= t('bo.common.statuses.active') %></span>
      <% else %>
        <span class="badge bg-secondary rounded-pill px-3 py-2"><%= t('bo.common.statuses.inactive') %></span>
      <% end %>
      <%= link_to edit_bo_customer_path(params[:org_slug], @customer), class: "btn btn-outline-primary" do %>
        <i class="fa-solid fa-pen-to-square me-1"></i> <%= t('bo.common.actions.edit') %>
      <% end %>
      <%= render "bo/customers/invite" %>
      <%= link_to bo_customer_path(params[:org_slug], @customer), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: t('bo.common.confirm.delete_customer') } do %>
        <i class="fa-solid fa-trash me-1"></i> <%= t('bo.common.actions.delete') %>
      <% end %>
    </div>
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-md-8">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title mb-4"><%= t('bo.customers.show.contact_information') %></h5>

        <div class="row mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-envelope text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block"><%= t('bo.customers.form.email') %></small>
                <span><%= @customer.email %></span>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-phone text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block"><%= t('bo.customers.form.phone') %></small>
                <span><%= @customer.contact_phone || t('bo.common.not_provided') %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-building text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block"><%= t('bo.customers.form.taxpayer_id') %></small>
                <span><%= @customer.taxpayer_id.presence || t('bo.common.not_provided') %></span>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-location-dot text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block"><%= t('bo.customers.form.billing_address') %></small>
                <span class="text-muted"><%= @customer.billing_address&.full_address|| t('bo.common.not_provided') %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-truck text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block"><%= t('bo.customers.show.active_shipping_addresses') %></small>
                  <% if @customer.shipping_addresses.any? %>
                    <ul class="text-muted ps-3 mb-0">
                    <% @customer.shipping_addresses.each do |address| %>
                      <li><span class="text-muted d-block"><%= address.full_address %></span></li>
                    <% end %>
                  </ul>
                  <% else %>
                    <span class="text-muted"><%= t('bo.common.not_provided') %></span>
                  <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title mb-4"><%= t('bo.customers.show.account_details') %></h5>

        <% if @customer.external_id.present? %>
        <div class="border-bottom pb-3 mb-3">
          <small class="text-muted d-block">External ID</small>
          <span class="font-monospace"><%= @customer.external_id %></span>
        </div>
        <% end %>

        <div>
          <small class="text-muted d-block"><%= t('bo.customers.show.member_since') %></small>
          <span><%= @customer.created_at.strftime("%-m/%-d/%Y") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<% end %>
