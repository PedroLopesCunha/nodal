<% content_for :bo_main_content do %>

<div class="container-fluid py-4">
<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customers_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-primary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <%= @customer.contact_name&.split&.map(&:first)&.join&.upcase || "?" %>
      </div>

      <div>
        <h4 class="mb-0"><%= @customer.contact_name %></h4>
        <span class="text-muted"><%= @customer.company_name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <% if @customer.active? %>
        <span class="badge bg-primary rounded-pill px-3 py-2">Active</span>
      <% else %>
        <span class="badge bg-secondary rounded-pill px-3 py-2">Inactive</span>
      <% end %>
      <%= link_to edit_bo_customer_path(params[:org_slug], @customer), class: "btn btn-outline-primary" do %>
        <i class="fa-solid fa-pen-to-square me-1"></i> Edit
      <% end %>
      <%= render "bo/customers/invite" %>
      <%= link_to bo_customer_path(params[:org_slug], @customer), class: "btn btn-outline-danger", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this customer?" } do %>
        <i class="fa-solid fa-trash me-1"></i> Delete
      <% end %>
    </div>
  </div>
</div>

<div class="row g-3 mb-4">
  <div class="col-md-8">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title mb-4">Contact Information</h5>

        <div class="row mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-envelope text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block">Email</small>
                <span><%= @customer.email %></span>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-phone text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block">Phone</small>
                <span><%= @customer.contact_phone || "Not provided" %></span>
              </div>
            </div>
          </div>
        </div>

        <div class="row mb-4">
          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-location-dot text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block">Billing address</small>
                <span class="text-muted"><%= @customer.billing_address&.full_address|| "Not provided" %></span>
              </div>
            </div>
          </div>

          <div class="col-md-6">
            <div class="d-flex align-items-start gap-3">
              <i class="fa-solid fa-truck text-muted mt-1"></i>
              <div>
                <small class="text-muted d-block">Active shipping addresses</small>
                  <% if @customer.shipping_addresses.any? %>
                    <ul class="text-muted ps-3 mb-0">
                    <% @customer.shipping_addresses.each do |address| %>
                      <li><span class="text-muted d-block"><%= address.full_address %></span></li>
                    <% end %>
                  </ul>
                  <% else %>
                    <span class="text-muted">Not provided</span>
                  <% end %>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>

  <div class="col-md-4">
    <div class="card h-100">
      <div class="card-body">
        <h5 class="card-title mb-4">Account Details</h5>

        <div>
          <small class="text-muted d-block">Member Since</small>
          <span><%= @customer.created_at.strftime("%-m/%-d/%Y") %></span>
        </div>
      </div>
    </div>
  </div>
</div>
</div>

<% end %>
