<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_customers_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white fw-bold" style="width: 60px; height: 60px; font-size: 1.25rem;">
        <i class="fa-solid fa-user-plus"></i>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.customers.new.title') %></h4>
        <span class="text-muted"><%= t('bo.customers.new.subtitle') %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_customers_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="customer-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.customers.new.create_customer') %>
      </button>
    </div>
  </div>
</div>

<%= form_with model: @customer, url: bo_customers_path(params[:org_slug]), method: :post, id: "customer-form" do |f| %>
  <div class="row g-3">
    <div class="col-md-8">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.customers.form.contact_information') %></h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.customers.form.contact_name') %> <span class="text-danger">*</span></label>
              <%= f.text_field :contact_name, class: "form-control", placeholder: t('bo.customers.form.placeholders.contact_name'), required: true %>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.customers.form.email') %> <span class="text-danger">*</span></label>
              <%= f.email_field :email, class: "form-control", placeholder: t('bo.customers.form.placeholders.email'), required: true %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.customers.form.phone') %></label>
              <%= f.text_field :contact_phone, class: "form-control", placeholder: t('bo.customers.form.placeholders.phone') %>
            </div>
          </div>
        </div>
      </div>

      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.customers.form.company_details') %></h5>

          <div class="row g-3">
            <div class="col-md-12">
              <label class="form-label"><%= t('bo.customers.form.company_name') %> <span class="text-danger">*</span></label>
              <%= f.text_field :company_name, class: "form-control", placeholder: t('bo.customers.form.placeholders.company_name'), required: true %>
            </div>
          </div>

          <div class="row g-3 mt-1">
            <div class="col-md-12">
              <label class="form-label"><%= t('bo.customers.form.taxpayer_id') %></label>
              <%= f.text_field :taxpayer_id, class: "form-control", placeholder: t('bo.customers.form.taxpayer_id_placeholder') %>
              <small class="text-muted"><%= t('bo.customers.form.taxpayer_id_hint') %></small>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.customers.form.login_credentials') %></h5>

          <div class="row g-3">
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.customers.form.password') %> <span class="text-danger">*</span></label>
              <%= f.password_field :password, class: "form-control", placeholder: t('bo.customers.form.placeholders.password'), required: true, autocomplete: "new-password" %>
              <small class="text-muted"><%= t('bo.customers.form.password_hint') %></small>
            </div>
            <div class="col-md-6">
              <label class="form-label"><%= t('bo.customers.form.confirm_password') %> <span class="text-danger">*</span></label>
              <%= f.password_field :password_confirmation, class: "form-control", placeholder: t('bo.customers.form.placeholders.confirm_password'), required: true, autocomplete: "new-password" %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title mb-4"><%= t('bo.customers.form.account_status') %></h5>

          <div class="form-check form-switch">
            <%= f.check_box :active, class: "form-check-input", role: "switch", id: "activeSwitch", checked: true %>
            <label class="form-check-label" for="activeSwitch"><%= t('bo.customers.form.active_customer') %></label>
          </div>
          <small class="text-muted"><%= t('bo.customers.form.inactive_hint') %></small>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% end %>
