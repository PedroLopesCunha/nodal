  <% if @customer.invitation_accepted_at.present? %>
    <%= button_to "#", class: "btn btn-outline-secondary", disabled: true do %>
      <i class="fa-solid fa-check me-1"></i> <%= t('bo.customers.invite.accepted') %>
    <% end %>
  <% elsif @customer.invitation_sent_at.present? %>
    <%= button_to invite_bo_customer_path(params[:org_slug], @customer),
                  class: "btn btn-outline-primary" do %>
      <i class="fa-solid fa-paper-plane me-1"></i> <%= t('bo.customers.invite.resend') %>
    <% end %>
  <% else %>
    <%= button_to invite_bo_customer_path(params[:org_slug], @customer),
                  class: "btn btn-outline-primary" do %>
      <i class="fa-solid fa-paper-plane me-1"></i> <%= t('bo.customers.invite.invite') %>
    <% end %>
  <% end %>
