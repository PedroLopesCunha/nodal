<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_product_attributes_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded bg-secondary d-flex align-items-center justify-content-center text-white" style="width: 60px; height: 60px;">
        <i class="fa-solid fa-tags fa-lg"></i>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.product_attributes.new.title') %></h4>
        <span class="text-muted"><%= t('bo.product_attributes.new.subtitle') %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_product_attributes_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="product-attribute-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.product_attributes.new.create_attribute') %>
      </button>
    </div>
  </div>
</div>

<%= render 'form', product_attribute: @product_attribute %>

<% end %>
