<div class="nested-field card card-body mb-2 bg-light" data-nested-fields-target="field">
  <div class="row g-2 align-items-end">
    <div class="col-md-5">
      <label class="form-label small"><%= t('bo.product_attributes.form.value_name') %></label>
      <%= f.text_field :value, class: "form-control form-control-sm", placeholder: t('bo.product_attributes.form.placeholders.value') %>
    </div>
    <div class="col-md-3">
      <label class="form-label small"><%= t('bo.product_attributes.form.value_slug') %></label>
      <%= f.text_field :slug, class: "form-control form-control-sm", placeholder: t('bo.product_attributes.form.placeholders.value_slug') %>
    </div>
    <div class="col-md-2">
      <label class="form-label small"><%= t('bo.product_attributes.form.color') %></label>
      <div class="input-group input-group-sm">
        <%= f.color_field :color_hex, class: "form-control form-control-color form-control-sm", value: f.object.color_hex.presence || "#6c757d", style: "width: 38px;" %>
        <%= f.text_field :color_hex, class: "form-control form-control-sm", placeholder: "#FFFFFF", style: "font-size: 0.75rem;" %>
      </div>
    </div>
    <div class="col-md-2 text-end">
      <%= f.hidden_field :_destroy, value: "0", data: { nested_fields_target: "destroy" } %>
      <button type="button" class="btn btn-sm btn-outline-danger" data-action="nested-fields#remove" title="<%= t('bo.common.actions.remove') %>">
        <i class="fa-solid fa-trash"></i>
      </button>
    </div>
  </div>
</div>
