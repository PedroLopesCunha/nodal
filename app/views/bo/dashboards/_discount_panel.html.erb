<div class="card dashboard__card discount-panel">
  <div class="card-header">
    <h6 class="mb-0">
      <i class="fa-solid fa-percent me-2 text-danger"></i> <%= t('bo.dashboards.discount_panel.title') %>
    </h6>
  </div>
  <div class="card-body">
    <!-- Summary Stats -->
    <div class="discount-panel__stats mb-3">
      <div class="discount-panel__stat">
        <span class="discount-panel__stat-label"><%= t('bo.dashboards.discount_panel.usage_rate') %></span>
        <span class="discount-panel__stat-value" id="discount-usage-rate">--</span>
      </div>
      <div class="discount-panel__stat">
        <span class="discount-panel__stat-label"><%= t('bo.dashboards.discount_panel.avg_discount') %></span>
        <span class="discount-panel__stat-value" id="discount-avg">--</span>
      </div>
      <div class="discount-panel__stat">
        <span class="discount-panel__stat-label"><%= t('bo.dashboards.discount_panel.revenue_lost') %></span>
        <span class="discount-panel__stat-value text-danger" id="discount-revenue-lost">--</span>
      </div>
    </div>

    <!-- Top Discounted Products -->
    <div class="discount-panel__section mb-3">
      <h6 class="discount-panel__section-title"><%= t('bo.dashboards.discount_panel.top_discounted_products') %></h6>
      <div id="top-discounted-products" class="discount-panel__list">
        <div class="text-muted small"><%= t('bo.common.loading') %></div>
      </div>
    </div>

    <!-- Top Clients by Discount -->
    <div class="discount-panel__section">
      <h6 class="discount-panel__section-title"><%= t('bo.dashboards.discount_panel.top_clients_by_discount') %></h6>
      <div id="top-clients-by-discount" class="discount-panel__list">
        <div class="text-muted small"><%= t('bo.common.loading') %></div>
      </div>
    </div>
  </div>
</div>
