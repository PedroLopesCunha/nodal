<div class="card dashboard__card mb-3">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h6 class="mb-0">
      <i class="fa-solid fa-trophy me-2 text-warning"></i> <%= t('bo.dashboards.top_clients.title') %>
    </h6>
    <%= link_to bo_customers_path(org_slug: organisation.slug), class: "btn btn-sm btn-link" do %>
      <%= t('bo.common.actions.view_all') %> <i class="fa-solid fa-arrow-right ms-1"></i>
    <% end %>
  </div>
  <div class="card-body">
    <div id="top-clients-list" class="top-clients">
      <div class="text-center text-muted py-3">
        <i class="fa-solid fa-spinner fa-spin"></i> <%= t('bo.common.loading') %>
      </div>
    </div>
  </div>
</div>
