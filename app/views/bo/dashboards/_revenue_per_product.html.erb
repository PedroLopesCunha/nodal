<div class="card dashboard__card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h6 class="mb-0">
      <i class="fa-solid fa-coins me-2 text-success"></i> <%= t('bo.dashboards.revenue_per_product.title') %>
    </h6>
    <%= link_to bo_pricing_path(org_slug: organisation.slug), class: "btn btn-sm btn-link" do %>
      <%= t('bo.sidebar.pricing') %> <i class="fa-solid fa-arrow-right ms-1"></i>
    <% end %>
  </div>
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-sm align-middle mb-0" id="revenue-per-product">
        <thead class="table-light">
          <tr>
            <th><%= t('bo.common.product') %></th>
            <th class="text-end"><%= t('bo.dashboards.revenue_per_product.gross') %></th>
            <th class="text-end"><%= t('bo.common.discounts') %></th>
            <th class="text-end"><%= t('bo.dashboards.revenue_per_product.net') %></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td colspan="4" class="text-center text-muted py-3">
              <i class="fa-solid fa-spinner fa-spin"></i> <%= t('bo.common.loading') %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
