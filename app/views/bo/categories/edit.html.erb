<% content_for :bo_main_content do %>

<div class="mb-4">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex align-items-center gap-3">
      <%= link_to bo_categories_path(params[:org_slug]), class: "text-muted" do %>
        <i class="fa-solid fa-arrow-left"></i>
      <% end %>

      <div class="rounded d-flex align-items-center justify-content-center text-white"
           style="width: 60px; height: 60px; background-color: <%= @category.color.presence || '#6c757d' %>;">
        <i class="fa-solid fa-folder fa-lg"></i>
      </div>

      <div>
        <h4 class="mb-0"><%= t('bo.categories.edit.title') %></h4>
        <span class="text-muted"><%= @category.name %></span>
      </div>
    </div>

    <div class="d-flex gap-2 align-items-center">
      <%= link_to bo_categories_path(params[:org_slug]), class: "btn btn-outline-secondary" do %>
        <%= t('bo.common.actions.cancel') %>
      <% end %>
      <button type="submit" form="category-form" class="btn btn-primary">
        <i class="fa-solid fa-check"></i> <%= t('bo.categories.edit.save_changes') %>
      </button>
    </div>
  </div>
</div>

<%= render 'form', category: @category %>

<% end %>
