<!-- Client Tiers Tab -->
<div class="card mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <div>
        <h5 class="card-title mb-1"><%= t('bo.pricing.tabs.client_tiers') %></h5>
        <p class="text-muted small mb-0"><%= t('bo.pricing.client_tiers.description') %></p>
      </div>
    </div>

    <%= form_with url: bo_pricing_path(params[:org_slug], tab: 'client_tiers'), method: :get, class: "mb-3" do %>
      <div class="input-group">
        <span class="input-group-text bg-white border-end-0">
          <i class="fa-solid fa-magnifying-glass text-muted"></i>
        </span>
        <%= text_field_tag :search,
              params[:search],
              class: "form-control border-start-0",
              placeholder: t('bo.pricing.client_tiers.search_placeholder')
        %>
        <%= hidden_field_tag :tab, 'client_tiers' %>
      </div>
    <% end %>
  </div>
</div>

<!-- Discounts Table -->
<div class="card">
  <table class="table table-hover mb-0">
    <thead class="table-light">
      <tr>
        <th><%= t('bo.pricing.form.client') %></th>
        <th><%= t('bo.pricing.form.discount_type') %></th>
        <th><%= t('bo.pricing.form.value') %></th>
        <th><%= t('bo.pricing.form.valid_period') %></th>
        <th><%= t('bo.pricing.form.notes') %></th>
        <th><%= t('bo.common.tables.status') %></th>
        <th><%= t('bo.common.actions_column') %></th>
      </tr>
    </thead>
    <tbody>
      <% if @customer_discounts.any? %>
        <% @customer_discounts.each do |discount| %>
          <tr>
            <td>
              <div class="fw-semibold"><%= discount.customer.company_name %></div>
              <small class="text-muted"><%= discount.customer.email %></small>
            </td>
            <td>
              <span class="badge bg-secondary-subtle text-secondary">
                <%= discount.discount_type.titleize %>
              </span>
            </td>
            <td>
              <% if discount.percentage? %>
                <span class="text-success fw-semibold"><%= discount.value_display %></span>
              <% else %>
                <span class="text-success fw-semibold"><%= humanized_money_with_symbol(Money.new((discount.discount_value * 100).to_i, @current_organisation.currency)) %></span>
              <% end %>
            </td>
            <td><%= discount.valid_period_display %></td>
            <td>
              <% if discount.notes.present? %>
                <span class="text-truncate d-inline-block" style="max-width: 150px;" title="<%= discount.notes %>">
                  <%= discount.notes %>
                </span>
              <% else %>
                <span class="text-muted">-</span>
              <% end %>
            </td>
            <td>
              <%= form_with url: toggle_active_bo_customer_discount_path(params[:org_slug], discount),
                            method: :patch,
                            local: true,
                            class: "d-inline" do %>
                <div class="form-check form-switch">
                  <input class="form-check-input" type="checkbox"
                         <%= 'checked' if discount.active? %>
                         onchange="this.form.submit()">
                </div>
              <% end %>
            </td>
            <td>
              <div class="d-flex gap-2">
                <%= link_to edit_bo_customer_discount_path(params[:org_slug], discount), class: "text-muted", title: t('bo.common.actions.edit') do %>
                  <i class="fa-solid fa-pen-to-square"></i>
                <% end %>
                <%= link_to bo_customer_discount_path(params[:org_slug], discount), class: "text-danger", title: t('bo.common.actions.delete'), data: { turbo_method: :delete, turbo_confirm: t('bo.common.confirm.delete_discount') } do %>
                  <i class="fa-solid fa-trash"></i>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="text-center text-muted py-4">
            <i class="fa-solid fa-users fa-2x mb-2 d-block"></i>
            <%= t('bo.pricing.client_tiers.no_discounts') %>
            <%= link_to t('bo.pricing.client_tiers.create_first'), new_bo_customer_discount_path(params[:org_slug]) %>.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
