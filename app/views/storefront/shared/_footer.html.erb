<footer class="storefront-footer border-top mt-auto">
  <% if current_organisation.has_contact_info? %>
    <div class="container py-4">
      <div class="row align-items-center">
        <div class="col-md-6 mb-3 mb-md-0">
          <div class="d-flex flex-wrap gap-4">
            <% if current_organisation.contact_email.present? %>
              <span class="text-muted">
                <i class="fa-solid fa-envelope me-2"></i>
                <%= mail_to current_organisation.contact_email, current_organisation.contact_email, class: "text-decoration-none", style: "color: #{current_organisation.effective_primary_color};" %>
              </span>
            <% end %>

            <% if current_organisation.phone.present? %>
              <span class="text-muted">
                <i class="fa-solid fa-phone me-2"></i>
                <%= link_to current_organisation.phone, "tel:#{current_organisation.phone.gsub(/\s/, '')}", class: "text-decoration-none", style: "color: #{current_organisation.effective_primary_color};" %>
              </span>
            <% end %>

            <% if current_organisation.whatsapp.present? %>
              <span class="text-muted">
                <i class="fa-brands fa-whatsapp me-2"></i>
                <%= link_to current_organisation.whatsapp, "https://wa.me/#{current_organisation.whatsapp.gsub(/\D/, '')}", target: "_blank", class: "text-decoration-none", style: "color: #{current_organisation.effective_primary_color};" %>
              </span>
            <% end %>
          </div>
        </div>
        <div class="col-md-6 text-md-end">
          <%= link_to contact_path(org_slug: params[:org_slug]), class: "btn btn-outline-secondary btn-sm" do %>
            <i class="fa-solid fa-address-card me-1"></i>
            <%= t('storefront.footer.contact_us') %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <div class="container py-2">
    <div class="d-flex justify-content-center gap-3">
      <%= link_to t("footer.legal.terms"), terms_path(org_slug: current_organisation.slug), class: "text-muted small text-decoration-none" %>
      <%= link_to t("footer.legal.privacy"), privacy_path(org_slug: current_organisation.slug), class: "text-muted small text-decoration-none" %>
    </div>
  </div>

  <%= render "storefront/shared/powered_by_nodal" %>
</footer>
