<%= link_to products_path(org_slug: params[:org_slug]), class: "btn btn-outline-secondary mb-4 mt-5" do %>
  <i class="fa-solid fa-arrow-left me-2"></i><%= t('storefront.products.show.back_to_products') %>
<% end %>

<h1 class="mb-4"><%= t('storefront.carts.show.title') %></h1>

<% if @order.order_items.empty? %>
  <div class="row g-4">
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm" style="border-radius: 12px;">
        <div class="card-body text-center py-5">
          <i class="fa-solid fa-cart-shopping fa-4x text-muted mb-3"></i>
          <h4><%= t('storefront.carts.show.empty_cart') %></h4>
          <p class="text-muted"><%= t('storefront.carts.show.empty_cart_hint') %></p>
          <%= link_to t('storefront.common.browse_products'), products_path(org_slug: params[:org_slug]), class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <% if @order_discounts.any? %>
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
          <div class="card-body">
            <h6 class="card-title mb-3">
              <i class="fa-solid fa-percent text-success me-2"></i><%= t('storefront.carts.show.order_discounts_available') %>
            </h6>
            <p class="text-muted small mb-3"><%= t('storefront.carts.show.order_discounts_hint') %></p>

            <% @order_discounts.each do |discount| %>
              <div class="d-flex align-items-center mb-2 p-2 bg-light rounded">
                <i class="fa-solid fa-tag text-success me-2"></i>
                <div>
                  <div class="fw-semibold">
                    <% if discount.percentage? %>
                      <%= discount.value_display %> off
                    <% else %>
                      <%= humanized_money_with_symbol(Money.new((discount.discount_value * 100).to_i, @current_organisation.currency)) %> off
                    <% end %>
                  </div>
                  <small class="text-muted">Orders over <%= discount.min_amount_display %></small>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="row g-4">
    <div class="col-lg-8">
      <%# Desktop table view (hidden on mobile) %>
      <div class="card border-0 shadow-sm d-none d-lg-block" style="border-radius: 12px;">
        <div class="card-body p-0">
          <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
              <tr>
                <th class="ps-4"><%= t('storefront.carts.show.table.product') %></th>
                <th class="text-center" style="width: 180px;"><%= t('storefront.carts.show.table.quantity') %></th>
                <th class="text-end"><%= t('storefront.carts.show.table.price') %></th>
                <th class="text-end"><%= t('storefront.carts.show.table.total') %></th>
                <th class="pe-4"></th>
              </tr>
            </thead>
            <tbody>
              <% @order_items.each do |item| %>
                <tr>
                  <td class="ps-4">
                    <div class="d-flex align-items-center">
                      <% photo = item.effective_photo %>
                      <% if photo.present? %>
                        <%= image_tag photo, class: "me-3", style: "width: 60px; height: 60px; object-fit: cover; border-radius: 8px;" %>
                      <% else %>
                        <div class="me-3 bg-light d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; border-radius: 8px;">
                          <i class="fa-solid fa-image text-muted"></i>
                        </div>
                      <% end %>
                      <div>
                        <div class="fw-medium"><%= item.product.name %></div>
                        <% if item.product_variant && item.product_variant.attribute_values.any? %>
                          <small class="text-primary"><%= item.variant_name %></small>
                          <br>
                        <% end %>
                        <small class="text-muted"><%= item.product.category&.name %></small>
                      </div>
                    </div>
                  </td>
                  <td>
                    <%= form_with model: item, url: order_item_path(org_slug: params[:org_slug], id: item), method: :patch, local: true, class: "d-flex justify-content-center" do |f| %>
                      <div class="input-group input-group-sm" style="width: 120px;">
                        <%= f.number_field :quantity, min: item.product.min_quantity || 1, class: "form-control text-center" %>
                        <button type="submit" class="btn btn-outline-secondary">
                          <i class="fa-solid fa-sync"></i>
                        </button>
                      </div>
                    <% end %>
                  </td>
                  <td class="text-end">
                    <% if item.discount_percentage && item.discount_percentage > 0 %>
                      <span class="text-muted text-decoration-line-through small d-block"><%= humanized_money_with_symbol(item.price) %></span>
                      <span class="text-success"><%= humanized_money_with_symbol(item.price - (item.price * item.discount_percentage)) %></span>
                      <span class="badge bg-success-subtle text-success small">-<%= format_discount_percentage(item.discount_percentage) %></span>
                    <% else %>
                      <%= humanized_money_with_symbol(item.price) %>
                    <% end %>
                  </td>
                  <td class="text-end fw-medium">
                    <% if item.discount_percentage && item.discount_percentage > 0 %>
                      <span class="text-muted text-decoration-line-through small d-block"><%= humanized_money_with_symbol(item.price * item.quantity) %></span>
                      <span class="text-success fw-bold"><%= humanized_money_with_symbol(item.total_price) %></span>
                    <% else %>
                      <%= humanized_money_with_symbol(item.total_price) %>
                    <% end %>
                  </td>
                  <td class="text-end pe-4">
                    <%= button_to order_item_path(org_slug: params[:org_slug], id: item), method: :delete, class: "btn btn-sm btn-outline-danger", data: { turbo_confirm: t('storefront.carts.show.confirm_remove_item') } do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <%# Mobile compact view (hidden on desktop) %>
      <div class="d-lg-none">
        <div class="card border-0 shadow-sm" style="border-radius: 12px;">
          <div class="card-body p-0">
            <% @order_items.each_with_index do |item, index| %>
              <div class="cart-item-compact p-3 <%= 'border-bottom' unless index == @order_items.length - 1 %>">
                <%# Line 1: Thumbnail + Name + Quantity controls %>
                <div class="d-flex align-items-center mb-2">
                  <% photo = item.effective_photo %>
                  <% if photo.present? %>
                    <%= image_tag photo, class: "me-2 flex-shrink-0 cart-item-compact-img", style: "width: 48px; height: 48px; object-fit: cover; border-radius: 6px;" %>
                  <% else %>
                    <div class="me-2 flex-shrink-0 bg-light d-flex align-items-center justify-content-center" style="width: 48px; height: 48px; border-radius: 6px;">
                      <i class="fa-solid fa-image text-muted small"></i>
                    </div>
                  <% end %>
                  <div class="flex-grow-1 min-width-0 me-2">
                    <div class="fw-semibold text-truncate" style="font-size: 0.9rem;"><%= item.product.name %></div>
                  </div>
                  <%# Inline quantity controls %>
                  <%= form_with model: item, url: order_item_path(org_slug: params[:org_slug], id: item), method: :patch, local: true, class: "flex-shrink-0", data: { controller: "cart-quantity" } do |f| %>
                    <div class="input-group cart-quantity-group cart-quantity-group-compact">
                      <button type="button" class="btn btn-outline-secondary cart-quantity-btn cart-quantity-btn-compact" data-action="cart-quantity#decrement" aria-label="<%= t('storefront.carts.show.decrease_quantity') %>">
                        <i class="fa-solid fa-minus" style="font-size: 0.65rem;"></i>
                      </button>
                      <%= f.number_field :quantity,
                          min: item.product.min_quantity || 1,
                          class: "form-control text-center cart-quantity-input cart-quantity-input-compact",
                          data: { cart_quantity_target: "input", action: "change->cart-quantity#submit" } %>
                      <button type="button" class="btn btn-outline-secondary cart-quantity-btn cart-quantity-btn-compact" data-action="cart-quantity#increment" aria-label="<%= t('storefront.carts.show.increase_quantity') %>">
                        <i class="fa-solid fa-plus" style="font-size: 0.65rem;"></i>
                      </button>
                    </div>
                  <% end %>
                </div>

                <%# Line 2: Variant · Price | Total + Remove %>
                <div class="d-flex align-items-center" style="padding-left: 56px;">
                  <div class="flex-grow-1 min-width-0 text-muted small text-truncate">
                    <% parts = [] %>
                    <% if item.product_variant && item.product_variant.attribute_values.any? %>
                      <% parts << item.variant_name %>
                    <% end %>
                    <% if item.product.category&.name.present? %>
                      <% parts << item.product.category.name %>
                    <% end %>
                    <% if item.discount_percentage && item.discount_percentage > 0 %>
                      <% parts << capture do %>
                        <span class="text-decoration-line-through"><%= humanized_money_with_symbol(item.price) %></span>
                        <span class="text-success"><%= humanized_money_with_symbol(item.price - (item.price * item.discount_percentage)) %></span>
                        <span class="badge bg-success-subtle text-success" style="font-size: 0.65rem;">-<%= format_discount_percentage(item.discount_percentage) %></span>
                      <% end %>
                    <% else %>
                      <% parts << humanized_money_with_symbol(item.price).to_s %>
                    <% end %>
                    <%= raw parts.join(' · ') %>
                  </div>
                  <div class="flex-shrink-0 d-flex align-items-center ms-2">
                    <span class="fw-bold small me-2">
                      <% if item.discount_percentage && item.discount_percentage > 0 %>
                        <span class="text-success"><%= humanized_money_with_symbol(item.total_price) %></span>
                      <% else %>
                        <%= humanized_money_with_symbol(item.total_price) %>
                      <% end %>
                    </span>
                    <%= button_to order_item_path(org_slug: params[:org_slug], id: item), method: :delete, class: "btn btn-sm btn-outline-danger cart-remove-btn-compact", data: { turbo_confirm: t('storefront.carts.show.confirm_remove_item') } do %>
                      <i class="fa-solid fa-trash"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <div class="d-flex flex-column flex-sm-row justify-content-between gap-2 mt-3">
        <%= link_to products_path(org_slug: params[:org_slug]), class: "btn btn-outline-secondary" do %>
          <i class="fa-solid fa-arrow-left me-2"></i><%= t('storefront.carts.show.continue_shopping') %>
        <% end %>
        <%= button_to t('storefront.carts.show.clear_cart'), clear_cart_path(org_slug: params[:org_slug]), method: :delete, class: "btn btn-outline-danger", data: { turbo_confirm: t('storefront.carts.show.confirm_clear_cart') } %>
      </div>
    </div>

    <div class="col-lg-4">
      <div class="card border-0 shadow-sm" style="border-radius: 12px;">
        <div class="card-body">
          <h5 class="card-title mb-3"><%= t('storefront.carts.show.order_summary') %></h5>

          <div class="d-flex justify-content-between mb-2">
            <span class="text-muted"><%= t('storefront.carts.show.subtotal') %> (<%= t('storefront.common.items', count: @order.item_count) %>)</span>
            <span><%= humanized_money_with_symbol(@order.total_amount) %></span>
          </div>

          <% if @order.best_order_discount.present? %>
            <div class="d-flex justify-content-between mb-2 text-success">
              <span><%= t('storefront.carts.show.order_discount') %> (<%= @order.best_order_discount.value_display %>)</span>
              <span>-<%= humanized_money_with_symbol(@order.auto_order_discount_amount) %></span>
            </div>
          <% end %>

          <hr>

          <div class="d-flex justify-content-between mb-4">
            <span class="fw-bold"><%= t('storefront.checkouts.show.summary.total') %></span>
            <span class="fw-bold fs-5"><%= humanized_money_with_symbol(@order.total_with_auto_discount) %></span>
          </div>

          <% if @current_organisation.free_shipping_enabled? %>
            <% if @order.qualifies_for_free_shipping? %>
              <div class="bg-light rounded p-2 mb-3 text-center">
                <i class="fa-solid fa-truck text-success me-1"></i>
                <span class="text-success small"><%= t('storefront.carts.show.free_shipping_applied') %></span>
              </div>
            <% else %>
              <div class="bg-light rounded p-2 mb-3">
                <div class="d-flex justify-content-between small text-muted mb-1">
                  <span><%= t('storefront.carts.show.free_shipping_progress', amount: humanized_money_with_symbol(@order.free_shipping_amount_remaining)) %></span>
                </div>
                <% progress = (@order.total_with_auto_discount.cents.to_f / @current_organisation.free_shipping_threshold.cents * 100).clamp(0, 100) %>
                <div class="progress" style="height: 6px;">
                  <div class="progress-bar bg-secondary" role="progressbar" style="width: <%= progress %>%"></div>
                </div>
              </div>
            <% end %>
          <% end %>

          <%= link_to checkout_path(org_slug: params[:org_slug]), class: "btn btn-primary w-100 btn-lg d-none d-lg-block" do %>
            <i class="fa-solid fa-arrow-right me-2"></i><%= t('storefront.carts.show.proceed_to_checkout') %>
          <% end %>
        </div>
      </div>

      <% if @order_discounts.any? %>
        <div class="card border-0 shadow-sm mt-3" style="border-radius: 12px;">
          <div class="card-body">
            <h6 class="card-title mb-3">
              <i class="fa-solid fa-percent text-primary me-2"></i><%= t('storefront.carts.show.available_discounts') %>
            </h6>

            <% @order_discounts.each do |discount| %>
              <% qualified = discount.applicable_to?(@order.total_amount) %>
              <% amount_needed = discount.min_order_amount - @order.total_amount %>

              <div class="d-flex align-items-start mb-2 <%= qualified ? 'text-success' : 'text-muted' %>">
                <% if qualified %>
                  <i class="fa-solid fa-check-circle me-2 mt-1"></i>
                <% else %>
                  <i class="fa-regular fa-circle me-2 mt-1"></i>
                <% end %>
                <div>
                  <div class="<%= qualified ? 'fw-semibold' : '' %>">
                    <% if discount.percentage? %>
                      <%= discount.value_display %> off
                    <% else %>
                      <%= humanized_money_with_symbol(Money.new((discount.discount_value * 100).to_i, @current_organisation.currency)) %> off
                    <% end %>
                    orders over <%= discount.min_amount_display %>
                  </div>
                  <% if qualified %>
                    <small><%= t('storefront.carts.show.discount_applied') %></small>
                  <% elsif amount_needed > Money.new(0, @current_organisation.currency) %>
                    <small><%= t('storefront.carts.show.spend_more_to_unlock', amount: humanized_money_with_symbol(amount_needed)) %></small>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <%# Sticky bottom checkout bar (mobile only) %>
  <div class="cart-sticky-bar d-lg-none fixed-bottom bg-white border-top shadow-lg p-3">
    <% if @current_organisation.free_shipping_enabled? && !@order.qualifies_for_free_shipping? %>
      <div class="d-flex align-items-center mb-2">
        <i class="fa-solid fa-truck text-muted me-2 small"></i>
        <span class="text-muted small flex-grow-1"><%= t('storefront.carts.show.free_shipping_progress', amount: humanized_money_with_symbol(@order.free_shipping_amount_remaining)) %></span>
        <% progress = (@order.total_with_auto_discount.cents.to_f / @current_organisation.free_shipping_threshold.cents * 100).clamp(0, 100) %>
        <div class="progress flex-shrink-0" style="height: 4px; width: 60px;">
          <div class="progress-bar bg-secondary" role="progressbar" style="width: <%= progress %>%"></div>
        </div>
      </div>
    <% elsif @current_organisation.free_shipping_enabled? && @order.qualifies_for_free_shipping? %>
      <div class="text-center mb-2">
        <i class="fa-solid fa-truck text-success me-1"></i>
        <span class="text-success small"><%= t('storefront.carts.show.free_shipping_applied') %></span>
      </div>
    <% end %>
    <div class="d-flex justify-content-between align-items-center mb-2">
      <span class="text-muted small"><%= t('storefront.common.items', count: @order.item_count) %></span>
      <span class="fw-bold fs-5"><%= humanized_money_with_symbol(@order.total_with_auto_discount) %></span>
    </div>
    <%= link_to checkout_path(org_slug: params[:org_slug]), class: "btn btn-primary w-100" do %>
      <i class="fa-solid fa-arrow-right me-2"></i><%= t('storefront.carts.show.proceed_to_checkout') %>
    <% end %>
  </div>
<% end %>
