<%= link_to products_path(org_slug: params[:org_slug], category: params[:category], query: params[:query]), class: "btn btn-outline-secondary mb-4 mt-5" do %>
  <i class="fa-solid fa-arrow-left me-2"></i><%= t('storefront.products.show.back_to_products') %>
<% end %>

<div class="row g-4">
  <!-- Left Column - Product Image -->
  <div class="col-lg-6">
    <div class="card border-0 shadow-sm position-relative" style="background-color: #f8f9fa; border-radius: 12px; overflow: hidden;">
      <!-- Category Badge on Image -->
      <span class="badge bg-dark position-absolute" style="top: 16px; left: 16px; z-index: 10; padding: 8px 14px; border-radius: 20px;">
        <i class="fa-solid fa-tag me-1"></i><%= @product.category&.name %>
      </span>

      <% discount_breakdown = @discount_calculator.discount_breakdown %>

      <!-- Main Image -->
      <div class="d-flex align-items-center justify-content-center" style="min-height: 400px; padding: 40px;">
        <% if @product.photo.attached? %>
          <%= image_tag @product.photo, class: "img-fluid", style: "max-height: 350px; object-fit: contain;" %>
        <% else %>
          <i class="fa-solid fa-image fa-5x text-muted"></i>
        <% end %>
      </div>

      <!-- Zoom Button -->
      <% if @product.photo.attached? %>
        <button class="btn btn-dark btn-sm position-absolute" style="bottom: 16px; right: 16px; border-radius: 20px; padding: 6px 16px;" data-bs-toggle="modal" data-bs-target="#imageModal">
          <i class="fa-solid fa-magnifying-glass-plus me-1"></i><%= t('storefront.products.show.zoom') %>
        </button>
      <% end %>
    </div>

    <!-- Thumbnail (if photo exists) -->
    <% if @product.photo.attached? %>
      <div class="d-flex justify-content-center mt-3">
        <div class="border rounded p-1" style="width: 60px; height: 60px; cursor: pointer;">
          <%= image_tag @product.photo, class: "img-fluid h-100 w-100", style: "object-fit: cover;" %>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Right Column - Product Details -->
  <div class="col-lg-6">
    <div class="card border-0 shadow-sm h-100" style="border-radius: 12px;">
      <div class="card-body p-4">
        <!-- Product Name & Category -->
        <div class="d-flex align-items-center gap-2 mb-2">
          <h1 class="mb-0" style="font-size: 2rem; font-weight: 600;"><%= @product.name %></h1>
          <span class="badge bg-secondary-subtle text-secondary" style="padding: 6px 12px; border-radius: 20px;">
            <i class="fa-solid fa-box me-1"></i><%= @product.category&.name %>
          </span>
        </div>

        <!-- Description -->
        <p class="text-muted mb-4"><%= @product.description %></p>

        <%# Build variants JSON for Stimulus controller if product has variants %>
        <% if @product.has_variants? && @attributes_with_values.present? %>
          <%
            variants_json = @variants.map do |v|
              {
                id: v.id,
                name: v.name,
                sku: v.sku,
                price_cents: v.unit_price_cents,
                original_price_cents: @product.unit_price,
                attribute_value_ids: v.attribute_values.pluck(:id),
                in_stock: v.in_stock?,
                stock_quantity: v.stock_quantity,
                track_stock: v.track_stock?,
                purchasable: v.purchasable?,
                photo_url: v.photo.attached? ? url_for(v.photo.variant(resize_to_limit: [400, 400])) : nil
              }
            end
          %>
          <div data-controller="variant-selector"
               data-variant-selector-variants-value="<%= variants_json.to_json %>"
               data-variant-selector-currency-symbol-value="<%= current_organisation.currency_symbol %>"
               data-variant-selector-default-price-cents-value="<%= @default_variant&.unit_price_cents || @product.unit_price %>"
               data-variant-selector-min-quantity-value="<%= @product.min_quantity || 1 %>">
        <% end %>

        <!-- Price -->
        <div class="mb-3">
          <% if discount_breakdown[:has_discount] %>
            <div class="price-with-discount">
              <span class="original-price text-muted text-decoration-line-through" style="font-size: 1.5rem;">
                <%= humanized_money_with_symbol(discount_breakdown[:base_price]) %>
              </span>
              <span class="discounted-price text-success" style="font-size: 2.5rem; font-weight: 700;">
                <%= humanized_money_with_symbol(discount_breakdown[:final_price]) %>
              </span>
              <span class="badge bg-success fs-6">
                -<%= (discount_breakdown[:effective_discount][:percentage] * 100).round(0) %>% OFF
              </span>
              <% if discount_breakdown[:all_discounts].any? { |d| d[:type] == :product } %>
                <span class="badge bg-danger fs-6 ms-1"><%= t('storefront.products.index.sale_badge') %></span>
              <% end %>
            </div>
          <% elsif @product.variable? && @product.price_range&.dig(:range) %>
            <span class="text-primary" data-variant-selector-target="mainPrice" style="font-size: 2.5rem; font-weight: 700;"><%= @product.display_price %></span>
          <% else %>
            <span class="text-primary" style="font-size: 2.5rem; font-weight: 700;"><%= humanized_money_with_symbol(@product.price) %></span>
          <% end %>
          <span class="text-muted fs-5">/ <%= @product.unit_description || 'unit' %></span>
        </div>

        <!-- Discount Details Section -->
        <% if discount_breakdown[:has_discount] %>
          <div class="alert alert-success mb-4" style="border-radius: 10px;">
            <h6 class="alert-heading mb-3">
              <i class="fa-solid fa-tags me-2"></i><%= t('storefront.products.show.available_discounts') %>
            </h6>
            <% discount_breakdown[:all_discounts].each do |discount| %>
              <div class="d-flex justify-content-between align-items-center py-2 <%= 'border-bottom' unless discount == discount_breakdown[:all_discounts].last %>">
                <div>
                  <% case discount[:type] %>
                  <% when :product %>
                    <span class="badge bg-danger me-2"><%= t('storefront.products.index.sale_badge') %></span>
                    <strong><%= t('storefront.products.show.product_discount') %></strong>
                    <% if discount[:min_quantity_required] && discount[:min_quantity_required] > 1 %>
                      <% if discount[:meets_min_quantity] %>
                        <small class="text-success d-block">
                          <i class="fa-solid fa-check me-1"></i><%= t('storefront.products.show.min_quantity_met') %> (<%= discount[:min_quantity_required] %>+ units)
                        </small>
                      <% else %>
                        <small class="text-warning d-block">
                          <i class="fa-solid fa-info-circle me-1"></i><%= t('storefront.products.show.buy_to_unlock', quantity: discount[:min_quantity_required]) %>
                        </small>
                      <% end %>
                    <% end %>
                  <% when :customer %>
                    <span class="badge bg-info me-2">VIP</span>
                    <strong><%= t('storefront.products.show.customer_tier_discount') %></strong>
                    <small class="text-muted d-block">Special pricing for your account</small>
                  <% when :customer_product %>
                    <span class="badge bg-primary me-2">SPECIAL</span>
                    <strong><%= t('storefront.products.show.your_special_price') %></strong>
                    <small class="text-muted d-block">Exclusive pricing just for you</small>
                  <% end %>
                  <% if discount[:valid_until].present? %>
                    <small class="text-warning d-block">
                      <i class="fa-solid fa-clock me-1"></i><%= t('storefront.products.show.valid_until', date: l(discount[:valid_until], format: :short)) %>
                    </small>
                  <% end %>
                </div>
                <div class="text-end">
                  <span class="badge bg-success fs-6">
                    -<%= discount[:discount_type] == 'percentage' ? "#{(discount[:value] * 100).round(0)}%" : humanized_money_with_symbol(Money.new((discount[:value] * 100).to_i, @current_organisation.currency)) %>
                  </span>
                  <% if discount[:stackable] %>
                    <small class="text-muted d-block"><%= t('storefront.products.show.stackable') %></small>
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="mt-3 pt-2 border-top">
              <div class="d-flex justify-content-between">
                <strong><%= t('storefront.products.show.you_save', amount: humanized_money_with_symbol(discount_breakdown[:savings])) %></strong>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Additional Price Info -->
        <div class="mb-4 text-muted">
          <% if @product.sku.present? %>
            <div><i class="fa-solid fa-barcode me-2"></i>SKU: <%= @product.sku %></div>
          <% end %>
        </div>

        <!-- Info Grid -->
        <div class="row g-3 mb-4 py-3 border-top border-bottom">
          <div class="col-4">
            <div class="text-muted small fw-semibold mb-1"><%= t('storefront.products.show.min_order') %></div>
            <div>
              <i class="fa-solid fa-layer-group me-1 text-muted"></i>
              <%= @product.min_quantity || 1 %> <%= @product.min_quantity_type || @product.unit_description || 'unit' %>
            </div>
          </div>
          <div class="col-4">
            <div class="text-muted small fw-semibold mb-1"><%= t('storefront.products.show.category') %></div>
            <div>
              <i class="fa-solid fa-folder me-1 text-muted"></i>
              <%= @product.category&.name || '-' %>
            </div>
          </div>
          <div class="col-4">
            <div class="text-muted small fw-semibold mb-1"><%= t('storefront.products.show.availability') %></div>
            <div>
              <% if @product.available? %>
                <i class="fa-solid fa-circle-check me-1 text-success"></i>
                <%= t('storefront.products.show.in_stock') %>
              <% else %>
                <i class="fa-solid fa-circle-xmark me-1 text-danger"></i>
                <%= t('storefront.products.show.out_of_stock') %>
              <% end %>
            </div>
          </div>
        </div>

        <!-- Variant Selector (for variable products) -->
        <% if @product.has_variants? && @attributes_with_values.present? %>
          <div class="mb-4">
            <h6 class="text-muted mb-3"><%= t('storefront.products.show.select_options') %></h6>

            <% @attributes_with_values.each do |attribute, values| %>
              <div class="mb-3">
                <label class="form-label fw-semibold"><%= attribute.name %></label>
                <select class="form-select" data-variant-selector-target="select" data-action="change->variant-selector#change">
                  <option value=""><%= t('storefront.products.show.select_option', attribute: attribute.name) %></option>
                  <% values.each do |value| %>
                    <option value="<%= value.id %>"
                            <%= 'selected' if @default_variant&.attribute_values&.include?(value) %>
                            <% if value.color_hex.present? %>
                              data-color="<%= value.color_hex %>"
                            <% end %>>
                      <%= value.value %>
                    </option>
                  <% end %>
                </select>
              </div>
            <% end %>

            <!-- Add to Cart Section -->
            <% unless browsing_as_member? %>
              <%= form_with url: order_items_path(org_slug: params[:org_slug]), method: :post, local: true, class: "d-flex align-items-center gap-3 flex-wrap" do |f| %>
                <%= hidden_field_tag :product_id, @product.id %>
                <%= hidden_field_tag :variant_id, @default_variant&.id, data: { variant_selector_target: "variantId" } %>

                <div class="d-flex align-items-center">
                  <label class="text-muted small me-2"><%= t('storefront.products.show.quantity') %></label>
                  <%= number_field_tag "order_item[quantity]", @product.min_quantity || 1, min: @product.min_quantity || 1, class: "form-control text-center", style: "width: 70px;", data: { variant_selector_target: "quantity", action: "change->variant-selector#updateTotal input->variant-selector#updateTotal" } %>
                </div>

                <button type="submit" class="btn btn-primary btn-lg px-4" style="border-radius: 8px;"
                        data-variant-selector-target="addToCart"
                        <%= 'disabled' unless @default_variant&.purchasable? %>>
                  <i class="fa-solid fa-cart-plus me-2"></i><%= t('storefront.products.show.add_to_cart') %>
                </button>

                <div class="text-muted">
                  <i class="fa-solid fa-calculator me-2"></i><%= t('storefront.products.show.estimated_total') %>
                  <span data-variant-selector-target="price">
                    <% if discount_breakdown[:has_discount] %>
                      <%= humanized_money_with_symbol(discount_breakdown[:final_price]) %>
                    <% else %>
                      <%= humanized_money_with_symbol(@default_variant&.price || @product.price) %>
                    <% end %>
                  </span>
                </div>
              <% end %>
            <% end %>
          </div>
          </div><%# Close variant-selector controller wrapper %>
        <% else %>
          <!-- Add to Cart Section (simple product) -->
          <% unless browsing_as_member? %>
            <%= form_with url: order_items_path(org_slug: params[:org_slug]), method: :post, local: true, class: "d-flex align-items-center gap-3 flex-wrap" do |f| %>
              <%= hidden_field_tag :product_id, @product.id %>
              <%= hidden_field_tag :variant_id, @default_variant&.id %>
              <div class="d-flex align-items-center">
                <label class="text-muted small me-2"><%= t('storefront.products.show.quantity') %></label>
                <%= number_field_tag "order_item[quantity]", @product.min_quantity || 1, min: @product.min_quantity || 1, class: "form-control text-center", style: "width: 70px;" %>
              </div>

              <button type="submit" class="btn btn-primary btn-lg px-4" style="border-radius: 8px;" <%= 'disabled' unless @product.available? %>>
                <i class="fa-solid fa-cart-plus me-2"></i><%= t('storefront.products.show.add_to_cart') %>
              </button>

              <div class="text-muted">
                <i class="fa-solid fa-calculator me-2"></i><%= t('storefront.products.show.estimated_total') %>
                <% if discount_breakdown[:has_discount] %>
                  <%= humanized_money_with_symbol(discount_breakdown[:final_price]) %>
                  <small class="text-success">(-<%= (discount_breakdown[:effective_discount][:percentage] * 100).round(0) %>%)</small>
                <% else %>
                  <%= humanized_money_with_symbol(@product.price) %>
                <% end %>
              </div>
            <% end %>
          <% end %>
        <% end %>

        <% unless @product.available? %>
          <small class="text-danger d-block mt-3">
            <i class="fa-solid fa-circle-xmark me-1"></i><%= t('storefront.products.show.out_of_stock_message') %>
          </small>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Image Zoom Modal -->
<% if @product.photo.attached? %>
  <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header border-0">
          <h5 class="modal-title" id="imageModalLabel"><%= @product.name %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body text-center p-4">
          <%= image_tag @product.photo, class: "img-fluid", style: "max-height: 70vh;" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
