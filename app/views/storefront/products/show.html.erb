<%= link_to products_path(org_slug: params[:org_slug]), class: "btn btn-outline-secondary mb-4" do %>
  <i class="fa-solid fa-arrow-left me-2"></i>Back to products
<% end %>

<div class="row">
  <div class="col-lg-6 mb-4">
    <div class="card">
      <% if @product.photo.attached? %>
        <%= image_tag @product.photo, class: "card-img-top", style: "max-height: 500px; object-fit: cover;" %>
      <% else %>
        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 400px;">
          <i class="fa-solid fa-image fa-5x text-muted"></i>
        </div>
      <% end %>
    </div>
  </div>

  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-body">
        <span class="badge bg-secondary-subtle text-secondary mb-2"><%= @product.category&.name %></span>
        <h1 class="card-title mb-3"><%= @product.name %></h1>

        <div class="mb-4">
          <span class="h2 text-primary"><%= humanized_money_with_symbol(@product.price) %></span>
          <span class="text-muted">/ <%= @product.unit_description || 'unit' %></span>
        </div>

        <hr>

        <div class="mb-4">
          <h6 class="text-muted mb-2">Description</h6>
          <p><%= @product.description %></p>
        </div>

        <div class="row mb-4">
          <div class="col-6">
            <h6 class="text-muted mb-1">SKU</h6>
            <p class="mb-0"><%= @product.sku || '-' %></p>
          </div>
          <div class="col-6">
            <h6 class="text-muted mb-1">Minimum Order</h6>
            <p class="mb-0"><%= @product.min_quantity || 1 %> <%= @product.unit_description || 'units' %></p>
          </div>
        </div>

        <hr>

        <div class="d-grid gap-2">
          <button class="btn btn-primary btn-lg" disabled>
            <i class="fa-solid fa-cart-plus me-2"></i>Add to Cart
          </button>
          <small class="text-muted text-center">Cart functionality coming soon</small>
        </div>
      </div>
    </div>
  </div>
</div>
