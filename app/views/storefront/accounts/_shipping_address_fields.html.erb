<div class="border rounded p-3 mb-3">
  <%= f.hidden_field :address_type, value: "shipping" %>
  <%= f.hidden_field :active, value: true %>
  <% if f.object.persisted? %>
    <%= f.hidden_field :id %>
  <% end %>

  <div class="row g-3">
    <div class="col-md-8">
      <label class="form-label"><%= t('storefront.account.show.address.street') %></label>
      <%= f.text_field :street_name, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('storefront.account.show.address.number') %></label>
      <%= f.text_field :street_nr, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('storefront.account.show.address.postal_code') %></label>
      <%= f.text_field :postal_code, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('storefront.account.show.address.city') %></label>
      <%= f.text_field :city, class: "form-control" %>
    </div>

    <div class="col-md-4">
      <label class="form-label"><%= t('storefront.account.show.address.country') %></label>
      <%= f.text_field :country, class: "form-control" %>
    </div>
  </div>

  <% if f.object.persisted? %>
    <div class="text-end mt-2">
      <button type="button" class="btn btn-sm btn-outline-danger"
              onclick="this.closest('.border').querySelector('[name*=active]').value='false'; this.closest('.border').style.display='none';">
        <i class="fa-solid fa-trash-can me-1"></i><%= t('storefront.account.show.remove_address') %>
      </button>
    </div>
  <% else %>
    <div class="text-end mt-2">
      <button type="button" class="btn btn-sm btn-outline-danger"
              onclick="this.closest('.border').remove();">
        <i class="fa-solid fa-trash-can me-1"></i><%= t('storefront.account.show.remove_address') %>
      </button>
    </div>
  <% end %>
</div>
